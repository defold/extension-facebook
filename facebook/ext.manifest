name: FacebookExtExternal

platforms:
    android:
        context:
            aaptExtraPackages: ['com.facebook', 'com.facebook.common', 'com.facebook.login', 'com.facebook.share']

    armv7-ios:
        context:
            frameworks: ['Security']
            weakFrameworks: ['Accounts', 'Social', 'AdSupport']
            flags: ['-fcxx-modules', '-fmodules']
            linkFlags: ['-ObjC']

    arm64-ios:
        context:
            frameworks: ['Security']
            weakFrameworks: ['Accounts', 'Social', 'AdSupport']
            flags: ['-fcxx-modules', '-fmodules']
            linkFlags: ['-ObjC']

    x86_64-ios:
        context:
            frameworks: ['Security']
            weakFrameworks: ['Accounts', 'Social', 'AdSupport']
            flags: ['-fcxx-modules', '-fmodules']
            linkFlags: ['-ObjC']
